# Tallyfy Migration Tool - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# TALLYFY CONFIGURATION (Required for all migrations)
# ============================================================================
TALLYFY_API_KEY=your_tallyfy_api_key_here
TALLYFY_ORGANIZATION=your_organization_id
TALLYFY_API_URL=https://api.tallyfy.com/api

# ============================================================================
# AI AUGMENTATION (Optional - enhances migration quality)
# ============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration (Alternative to OpenAI)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# AI Feature Flags
AI_ENABLED=true
AI_PROVIDER=openai  # Options: openai, anthropic, none

# ============================================================================
# WORKFLOW PLATFORM CONFIGURATIONS
# ============================================================================

# Asana
ASANA_ACCESS_TOKEN=your_asana_token_here
ASANA_WORKSPACE_ID=your_workspace_id

# ClickUp
CLICKUP_API_KEY=your_clickup_api_key_here
CLICKUP_WORKSPACE_ID=your_workspace_id

# Monday.com
MONDAY_API_KEY=your_monday_api_key_here
MONDAY_API_URL=https://api.monday.com/v2

# Pipefy
PIPEFY_API_TOKEN=your_pipefy_token_here
PIPEFY_API_URL=https://api.pipefy.com/graphql

# Process Street
PROCESS_STREET_API_KEY=your_process_street_api_key_here
PROCESS_STREET_BASE_URL=https://api.process.st/api/v1

# Kissflow
KISSFLOW_API_KEY=your_kissflow_api_key_here
KISSFLOW_ACCOUNT_ID=your_account_id
KISSFLOW_BASE_URL=https://your-account.kissflow.com/api/v1

# RocketLane
ROCKETLANE_API_KEY=your_rocketlane_api_key_here
ROCKETLANE_BASE_URL=https://api.rocketlane.com/api/1.0

# Wrike
WRIKE_API_KEY=your_wrike_api_key_here
WRIKE_BASE_URL=https://www.wrike.com/api/v4

# NextMatter
NEXTMATTER_API_KEY=your_nextmatter_api_key_here
NEXTMATTER_BASE_URL=https://api.nextmatter.com/api/v1

# Basecamp
BASECAMP_ACCOUNT_ID=your_basecamp_account_id
BASECAMP_ACCESS_TOKEN=your_basecamp_access_token
BASECAMP_CLIENT_ID=your_app_name  # Used in User-Agent header

# Trello
TRELLO_API_KEY=your_trello_api_key_here
TRELLO_TOKEN=your_trello_token_here
TRELLO_BASE_URL=https://api.trello.com/1

# ============================================================================
# FORM PLATFORM CONFIGURATIONS
# ============================================================================

# Typeform
TYPEFORM_API_KEY=your_typeform_api_key_here
TYPEFORM_BASE_URL=https://api.typeform.com

# Google Forms
GOOGLE_FORMS_CREDENTIALS_PATH=path/to/google/credentials.json
GOOGLE_FORMS_TOKEN_PATH=path/to/google/token.json
GOOGLE_FORMS_SCOPES=https://www.googleapis.com/auth/forms.body.readonly,https://www.googleapis.com/auth/forms.responses.readonly

# Jotform
JOTFORM_API_KEY=your_jotform_api_key_here
JOTFORM_REGION=US  # Options: US, EU
JOTFORM_BASE_URL=https://api.jotform.com  # or https://eu-api.jotform.com for EU

# Cognito Forms
COGNITO_FORMS_API_KEY=your_cognito_forms_api_key_here
COGNITO_FORMS_ORGANIZATION=your_organization_name
COGNITO_FORMS_BASE_URL=https://www.cognitoforms.com/api/1

# ============================================================================
# MIGRATION SETTINGS
# ============================================================================

# General Migration Settings
MIGRATION_BATCH_SIZE=100
MIGRATION_RATE_LIMIT_DELAY=1  # Seconds between API calls
MIGRATION_MAX_RETRIES=3
MIGRATION_TIMEOUT=300  # Seconds

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH=./logs/migration.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Checkpoint and Recovery
CHECKPOINT_ENABLED=true
CHECKPOINT_PATH=./checkpoints
RECOVERY_MODE=auto  # Options: auto, manual, disabled

# Customer Portal Handling (for platforms with external users)
CUSTOMER_PORTAL_HANDLING=guest_users  # Options: guest_users, skip, map_to_members

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Parallel Processing
PARALLEL_PROCESSING_ENABLED=false
MAX_WORKERS=4

# Data Validation
STRICT_VALIDATION=true
SKIP_VALIDATION_ERRORS=false

# Dry Run Mode (for testing)
DEFAULT_DRY_RUN=true  # Set to false for production migrations

# Export/Import Settings
EXPORT_PATH=./exports
IMPORT_MAPPING_FILE=./mappings/custom_mappings.json

# Performance Monitoring
ENABLE_METRICS=true
METRICS_EXPORT_PATH=./metrics

# ============================================================================
# NOTES
# ============================================================================
# 1. Never commit this file with actual credentials
# 2. Keep your API keys secure and rotate them regularly
# 3. Test migrations with dry-run mode first
# 4. Use checkpoints for large migrations
# 5. Monitor rate limits for each platform
# 6. Some platforms may require additional OAuth setup
# 7. Refer to each platform's API documentation for key generation

# End of configuration