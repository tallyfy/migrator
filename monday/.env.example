# Monday.com to Tallyfy Migration Configuration
# Copy this file to .env and fill in your credentials

# Monday.com API Configuration
# Get your API token from: https://monday.com/developers/v2#authentication-section
MONDAY_API_TOKEN=your_monday_api_token_here

# Tallyfy API Configuration
# Get your API key from your Tallyfy organization settings
TALLYFY_API_KEY=your_tallyfy_api_key_here
TALLYFY_ORGANIZATION=your_organization_subdomain

# Optional: Monday.com API Version (default: 2024-01)
# MONDAY_API_VERSION=2024-01

# Optional: API Rate Limiting (requests per minute)
# MONDAY_RATE_LIMIT=50
# TALLYFY_RATE_LIMIT=100

# Optional: Batch Sizes
# BATCH_SIZE_USERS=50
# BATCH_SIZE_ITEMS=100
# BATCH_SIZE_PROCESSES=50

# Optional: Retry Configuration
# MAX_RETRIES=3
# RETRY_DELAY=5

# Optional: Logging Level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Optional: Checkpoint Directory
# CHECKPOINT_DIR=.monday_migration

# Optional: Database Path for ID Mappings
# ID_MAPPING_DB=monday_migration.db

# Optional: Dry Run Mode (true/false)
# DRY_RUN=false

# Optional: Report Only Mode (true/false)
# REPORT_ONLY=false