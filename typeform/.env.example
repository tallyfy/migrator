# Typeform API Configuration
TYPEFORM_ACCESS_TOKEN=tfp_your_personal_access_token_here
TYPEFORM_API_BASE=https://api.typeform.com  # or https://api.eu.typeform.com for EU

# Tallyfy API Configuration
TALLYFY_API_KEY=your_tallyfy_api_key_here
TALLYFY_ORGANIZATION=your_organization_subdomain

# Anthropic API Configuration (REQUIRED for form splitting)
ANTHROPIC_API_KEY=sk-ant-api03-...  # REQUIRED - AI needed for form analysis
AI_MODEL=claude-3-haiku-20240307
AI_TEMPERATURE=0
AI_MAX_TOKENS=500

# Form Splitting Configuration
FORM_SPLITTING_THRESHOLD=20  # Fields above this trigger AI analysis
MAX_FIELDS_PER_STEP=15  # Maximum fields in a single step
MIN_FIELDS_FOR_SPLIT=21  # Minimum fields to consider splitting
FORCE_SINGLE_FORM=false  # Override AI and keep as single form

# Migration Options
MIGRATE_RESPONSES=true
PRESERVE_LOGIC_JUMPS=true
VARIABLE_HANDLING=process_data  # Options: process_data, calculated_fields, metadata
HIDDEN_FIELD_HANDLING=hidden_captures  # Options: hidden_captures, metadata, skip

# AI Feature Flags
AI_ANALYZE_FORM_COMPLEXITY=true  # Determine if form needs splitting
AI_GROUP_FIELDS_LOGICALLY=true  # Smart field grouping for steps
AI_MAP_COMPLEX_LOGIC=true  # Convert logic jumps intelligently
AI_OPTIMIZE_USER_FLOW=true  # Create optimal step sequence

# Performance Settings
BATCH_SIZE=10  # Forms per batch
RATE_LIMIT_DELAY=0.5  # Seconds between requests (max 2/sec)
MAX_RETRIES=3
CONNECTION_TIMEOUT=30
READ_TIMEOUT=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/migration.log
LOG_API_CALLS=false

# Validation
VALIDATE_FIELD_MAPPINGS=true
GENERATE_REPORTS=true
FLAG_UNSUPPORTED_FEATURES=true