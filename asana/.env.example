# Asana to Tallyfy Migration Configuration
# Copy this file to .env and fill in your actual values

# REQUIRED: Asana Configuration
# Get your Personal Access Token from: https://app.asana.com/0/my-apps
ASANA_ACCESS_TOKEN=your_asana_personal_access_token_here

# OPTIONAL: Asana Workspace (auto-detected if not provided)
# Find your workspace GID in Asana URL or via API
ASANA_WORKSPACE_GID=

# REQUIRED: Tallyfy Configuration
# Get from Tallyfy Settings > Integrations > REST API
TALLYFY_API_TOKEN=your_tallyfy_api_token_here
TALLYFY_ORG_ID=your_tallyfy_organization_id_here

# Optional: Tallyfy API Base URL (for custom deployments)
TALLYFY_API_URL=https://go.tallyfy.com/api

# Migration Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional, logs to console if not set)
LOG_FILE=logs/migration.log

# Continue migration on errors (default: false)
CONTINUE_ON_ERROR=false

# Generate detailed report after migration (default: true)
GENERATE_REPORT=true

# Disable progress bars (useful for CI/CD)
DISABLE_PROGRESS=false

# Database Configuration
# Path to ID mapping database
ID_MAPPER_PATH=data/id_mappings.db

# Checkpoint directory for resume capability
CHECKPOINT_DIR=checkpoints

# Performance Configuration
# Batch size for bulk operations
BATCH_SIZE=100

# Rate limiting (requests per minute)
RATE_LIMIT=150  # 150 for free Asana, 1500 for paid

# Delay between API calls (seconds)
API_DELAY=0.5

# Maximum retries for failed API calls
MAX_RETRIES=3

# Timeout for API calls (seconds)
API_TIMEOUT=30

# Feature Flags
# Migrate archived projects
MIGRATE_ARCHIVED=false

# Migrate completed tasks
MIGRATE_COMPLETED_TASKS=true

# Migrate attachments
MIGRATE_ATTACHMENTS=true

# Migrate comments
MIGRATE_COMMENTS=true

# Migrate custom fields
MIGRATE_CUSTOM_FIELDS=true

# Migration Filters (optional)
# Only migrate specific teams (comma-separated GIDs)
FILTER_TEAMS=

# Only migrate specific projects (comma-separated GIDs)
FILTER_PROJECTS=

# Only migrate projects with specific tags (comma-separated)
FILTER_TAGS=

# Date range for task migration (ISO format)
TASKS_SINCE_DATE=
TASKS_UNTIL_DATE=

# Advanced Configuration
# Use Asana Python SDK instead of direct API calls
USE_ASANA_SDK=false

# Enable dry run by default
DEFAULT_DRY_RUN=false

# S3 Configuration (for large attachments > 100MB)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=asana-migration-files

# PostgreSQL Configuration (for complex data storage)
# POSTGRES_URL=postgresql://user:password@localhost/asana_migration

# Notification Configuration (optional)
# Send completion notification
# NOTIFICATION_EMAIL=
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=

# Debug Configuration
# Save all API responses for debugging
SAVE_API_RESPONSES=false

# Enable verbose API logging
VERBOSE_API_LOGGING=false

# Testing Configuration
# Use mock data instead of real API calls
USE_MOCK_DATA=false

# Limit number of items for testing
TEST_LIMIT=10